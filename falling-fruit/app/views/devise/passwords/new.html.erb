<h2><%= translate("users.send_password_instructions") %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, translate("glossary.email") %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.button translate("glossary.send") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
